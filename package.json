{
  "name": "opentui-git",
  "version": "0.1.7",
  "private": true,
  "description": "A lazygit-style terminal UI git client built with OpenTUI, SolidJS, and Bun",
  "workspaces": ["packages/*"],
  "scripts": {
    "dev": "bun run --cwd packages/core --conditions=browser src/index.ts",
    "dev:server": "bun run --cwd packages/core dev:server",
    "dev:desktop": "bun run --cwd packages/desktop dev",
    "start": "bun run --cwd packages/core --conditions=browser src/index.ts",
    "build": "bun run build:sdk && bun run build:core",
    "build:core": "bun run --cwd packages/core build",
    "build:sdk": "bun run --cwd packages/sdk typecheck",
    "build:binary": "bun run --cwd packages/core build:binary",
    "build:desktop": "bun run --cwd packages/desktop build",
    "typecheck": "bun run typecheck:sdk && bun run typecheck:core && bun run typecheck:desktop",
    "typecheck:core": "bun run --cwd packages/core typecheck",
    "typecheck:sdk": "bun run --cwd packages/sdk typecheck",
    "typecheck:desktop": "bun run --cwd packages/desktop typecheck",
    "clean": "rm -rf packages/*/node_modules packages/*/dist node_modules bun.lock"
  },
  "keywords": [
    "git",
    "tui",
    "terminal",
    "opentui",
    "solidjs",
    "bun",
    "lazygit"
  ],
  "author": "opentui-git",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.9.3"
  }
}
