{
  "name": "opentui-git",
  "version": "0.1.7",
  "private": true,
  "description": "A lazygit-style terminal UI git client built with OpenTUI, SolidJS, and Bun",
  "workspaces": ["packages/*"],
  "scripts": {
    "dev": "bun run --cwd packages/core dev",
    "dev:server": "bun run --cwd packages/core dev:server",
    "build": "bun run build:core && bun run build:sdk",
    "build:core": "bun run --cwd packages/core build",
    "build:sdk": "bun run --cwd packages/sdk typecheck",
    "build:desktop": "bun run --cwd packages/desktop tauri build",
    "typecheck": "bun run --cwd packages/core typecheck && bun run --cwd packages/sdk typecheck",
    "clean": "rm -rf packages/*/node_modules packages/*/dist node_modules"
  },
  "keywords": [
    "git",
    "tui",
    "terminal",
    "opentui",
    "solidjs",
    "bun",
    "lazygit"
  ],
  "author": "opentui-git",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.9.3"
  }
}
