{
  "name": "opentui-git",
  "version": "0.1.7",
  "description": "A lazygit-style terminal UI git client built with OpenTUI, SolidJS, and Bun",
  "type": "module",
  "main": "src/index.tsx",
  "bin": {
    "opentui-git": "./src/index.tsx"
  },
  "scripts": {
    "dev": "bun run src/index.tsx",
    "start": "bun run src/index.tsx",
    "build": "bun run scripts/build.ts",
    "build:binary": "bun run scripts/build-binaries.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "git",
    "tui",
    "terminal",
    "opentui",
    "solidjs",
    "bun",
    "lazygit"
  ],
  "author": "opentui-git",
  "license": "MIT",
  "dependencies": {
    "@opentui/core": "^0.1.65",
    "@opentui/solid": "^0.1.65",
    "@types/diff": "^7.0.2",
    "diff": "^8.0.2",
    "shiki": "^3.20.0",
    "simple-git": "^3.30.0",
    "solid-js": "^1.9.10"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.9.3"
  }
}
