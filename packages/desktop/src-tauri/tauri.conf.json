{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "opentui-git",
  "identifier": "com.opentui-git.desktop",
  "version": "0.1.7",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app", "deb", "rpm", "appimage", "nsis"],
    "externalBin": ["sidecars/opentui-git-server"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": []
  },
  "app": {
    "windows": [],
    "security": {
      "csp": null
    }
  },
  "plugins": {}
}
